<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Tabuada" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Cores Primarias -->
        <!-- Cor da barra de acao -->
        <item name="colorPrimary">@color/purple_500</item>
        <!-- Cor da Barra de Status -->
        <item name="colorPrimaryVariant">@color/black</item>
        <!-- Cor do texto e/ou icone sobre a cor primaria -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Cores Secundarias -->
        <!-- Cor geralmente usada em botoes, barras de progesso, que sejam secundarios -->
        <item name="colorSecondary">@color/teal_200</item>
        <!-- Fornece uma tonalidade diferente da colorSecondary -->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Cor dos Icones -->
        <item name="colorOnSecondary">@color/white</item>
    </style>

    <!-- Define cor de fundo padrao -->
    <style name="themeDark">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>